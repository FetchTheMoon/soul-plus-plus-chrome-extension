{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "es2017",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/js",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}